{
  "root": true,
  "extends": ["airbnb", "airbnb/hooks", "airbnb-typescript"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": { "project": ["./tsconfig.json"] },
  "plugins": ["@typescript-eslint"],
  "ignorePatterns": ["*.js"],
  "rules": {
    "react/require-default-props": "off",
    "max-classes-per-file": "off"
  }
}